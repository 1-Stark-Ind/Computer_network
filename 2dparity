int main()
{	
	int option;
	printf("Enter\n1 for adding parity for sending data frame\n2 for checking parity bit in recieved data frame\n::");
	scanf("%d",&option);
	switch(option)
	{
		case 1:
			add_parity();
			break;
		/*case 2:
			check_parity();
			break;*/
